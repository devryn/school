<h2><%= form_title %></h2>

<% if user.errors.any? %>
    <% user.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>

  <%= form_for(user) do |f| %>
  <label for="school">School</label>
  <%= f.select :school_id, options_from_collection_for_select(School.all, :id, :name) %><p>

  <label for="name">Name</label>
  <%=f.text_field :name, placeholder: 'name', class: 'form-control' %><p>

    <label for="email">Email</label>
    <%=f.email_field :email, placeholder: 'email', class: 'form-control' %><p>

    <label for="password">Password</label>
    <%=f.password_field :password, placeholder: 'password', class: 'form-control' %><p>

    <label for="password_confirmation">Confirm Password</label>
    <%=f.password_field :password_confirmation, class: 'form-control' %>

    <p><div class ='actions text-center'>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
