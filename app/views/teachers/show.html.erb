<h2><%= link_to teacher.name, teacher %></h2>

<% teacher.students.each do |n| %>
<%= link_to n.name, student_path(n) %>
<% end %>

<p><p><button type="button" class="btn btn-default"><%= link_to "Edit Teacher", edit_teacher_path(teacher) %></button>
<button type="button" class="btn btn-danger"><%= link_to "Delete Teacher", teacher, method: :delete, data: { confirm: "Are you sure you want to delete this teachers and all their students?"} %></button>
