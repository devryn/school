<h2><%= school.name %></h2>
<p><%= school.teachers.count %> Teachers </p>
<p><%= school.students.count %> Students </p>
<% school.teachers.each do |teacher| %>
  <h3>Teacher: <%= link_to teacher.name, teacher_path(teacher) %></h3>
  <p><%= teacher.students.count %> Students</p>
    <% teacher.students[0..-2].each do |student| %>
      <%= link_to student.name, student_path(student) %>,
    <% end %>
    <%= link_to teacher.students.last.name, student_path(teacher.students.last) %>
<% end %>
<h3><%= school.courses.count %> Courses: </h3>
<% school.courses.each do |course| %>
    <ul>
      <li> <%= link_to course.name, course %> </li>
    </ul>
<% end %>

<button type="button" class="btn btn-default"><%= link_to "Edit School", edit_school_path(school) %></button>
<button type="button" class="btn btn-danger"><%= link_to "Delete School", school, method: :delete, data: { confirm: "Are you sure you want to delete this school and all teachers and students?"} %></button>
